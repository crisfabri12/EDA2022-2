#include <iostream>
using namespace std;

void Resize(int *& vec, int& max,int& n){
	int delta = 10;
	int *aux = new int[max+delta];
	int i = 0;
	while(i != n){
		aux[i] = vec[i];
		i++;
	}
	delete [ ]vec;
	vec = aux;
}

void Insert(int *& vec, int& n, int& max, int elem)
{
	if( n == max ) 
		Resize(vec, max,n); 
	vec[n++] = elem;
}

int main(int argc, char *argv[]) {
	int * vec;
	int n = 0;
	int max = 0;
	Insert(vec,n,max,2);
	Insert(vec,n,max,2);
	
	for(int i = 0; i < n; i++){
		cout << vec[i] << " ";
	}
	return 0;
}

